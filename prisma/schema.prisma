// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Provider {
  id          String   @id @default(cuid())
  name        String
  description String
  logo        String?
  website     String?
  models      String   // JSON array of model names
  pricing     String   // JSON pricing structure
  features    String   // JSON array of features
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sector {
  id          String   @id @default(cuid())
  name        String
  description String
  applications String  // JSON array of applications
  benefits    String  // JSON array of benefits
  examples    String  // JSON array of examples
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CodeExample {
  id          String   @id @default(cuid())
  title       String
  description String
  code        String
  language    String
  category    String
  provider    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

